{
  "name": "box-it",
  "displayName": "Box it",
  "description": "Simplify code sharing with your AI models",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "box-it.addToBox",
        "title": "Add to box"
      },
      {
        "command": "box-it.throwTheBox",
        "title": "Throw the box"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "box-it.addToBox",
          "group": "navigation"
        },
        {
          "when": "!editorHasSelection",
          "command": "box-it.throwTheBox",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Box It",
      "properties": {
        "box-it.folderStructure": {
          "type": "string",
          "enum": ["On", "Off"],
          "default": "On",
          "description": "Enable or disable folder structure in Box.txt"
        },
        "box-it.ignoreFolders": {
          "type": "string",
          "default": ".git,node_modules,.vscode",
          "description": "Comma-separated list of folders to ignore in the folder structure"
        },
        "box-it.detailedFolders": {
          "type": "string",
          "default": "",
          "description": "Comma-separated list of folders to show in detail (including subfolders)"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}